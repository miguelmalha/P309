@model P309.Models.Contactos

@{
    ViewBag.Title = "Eliminar";
}

<h2>Eliminar contacto</h2>

@*
    BeginForm() - Criação de um formulário para aceitar dados do utilizador. Utilização do método POST e processamento realizado pelo método de ação do controlador
    ActionLink() - retorna para a ação inserida
    TextBox() - Campo para inserção de um atributo do tipo texto
    DisplayFor() - exibição do valor do campo
    PagedListPager() - faz o output da paginação
*@

@if (@ViewBag.ContactoPermanente == null) //Apenas mostra o header caso o contacto a eliminar não seja o permanente
{
    <h3>Tem a certeza de que deseja eliminar este contacto?</h3>
}

<div class="form-group error">
    @if (@ViewBag.ContactoPermanente != null) //Mostrar mensagem de erro caso se tente editar o contacto permanente
    {
        <label> @ViewBag.ContactoPermanente</label>
    }
</div>

@if (@ViewBag.ContactoPermanente == null) //apenas mostra os dados caso o contacto a eliminar não seja o permanente
{
    <div>
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Telefone)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Telefone)
            </dd>

            <dt>
                Empresa @* Martelado pois DisplayFor não permite escolher um nome para o item a mostrar *@
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Empresa.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Notas)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Notas)
            </dd>

        </dl>

        @using (Html.BeginForm()) // Formulário para botão de Eliminar
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Eliminar" class="btn btn-default" />
                </div>
            </div>
        }

    </div>
}
<div>
    @Html.ActionLink("Voltar", "Index")
</div>




